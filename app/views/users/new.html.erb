<div class="auth-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xs-12">
        <h1 class="text-xs-center">Sign up</h1>
        <p class="text-xs-center">
          <a href="/login">Have an account?</a>
        </p>

        <%= render "layouts/user_errors" %>

        <%= form_with(model: @user) do |f| %>
          <fieldset class="form-group">
            <%= f.text_field :name, class: "form-control form-control-lg", placeholder: "Username" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.text_field :email, class: "form-control form-control-lg", placeholder: "Email" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Password Confirmation" %>
          </fieldset>
          <%= f.button "Sign up", type: :submit, class: "btn btn-lg btn-primary pull-xs-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
